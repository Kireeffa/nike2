<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/SecondBack"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/rectangle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="269dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Приложение Nike Члены клуба Nike получают доступ к лучшим продуктам, источникам вдохновения и историям из мира спорта."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="274dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="141dp"
        android:layout_height="126dp"
        app:srcCompat="@mipmap/logo_foreground"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:height="53sp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.1"
        android:text="Давай с нами"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="30dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="615dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:height="53sp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.1"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="30dp"
        app:strokeColor="#FFFCFC"
        app:strokeWidth="0.7dp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="615dp" />

</androidx.constraintlayout.widget.ConstraintLayout>